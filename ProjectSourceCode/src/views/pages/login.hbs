<style>
.bg-wrapper {
  position: relative;
  min-height: 72vh;
  overflow: hidden;
}

.bg-wrapper::before {
  content: "";
  position: absolute;
  inset: 0;
  background: url('/img/loginorreg.jpg')
             center/cover no-repeat;
  transform: scale(1.1);
  z-index: -1;
}
.login-box {
  background: rgba(255, 255, 255, 0.25);
  padding: 30px;
  width: 350px;
  margin: auto;
  margin-top: 80px;
  border-radius: 12px;
  backdrop-filter: blur(5px);
  color:#baf2ff;
}

.login-box button:hover {
   background-color: #b01e1e;
  color: white;
}
.login-box button:active {
    background-color: #054aa4;
    color: white;
}

</style>
<div class="bg-wrapper"> 
  <div class="login-box">

    <h2 style="text-align: center;">Login</h2>

    <form action="/login" method="POST" style="text-align: center;">
      <br>

      <label>Username: </label>
      <input type="text" name="username" required />
      <br><br>

      <label>Password: </label>
      <input type="password" name="password" required />
      <br><br>

      <button type="submit">Go!</button>
    </form>

    <br>
    <p style="text-align: center;">
      Don't have an account? <a href="/register" class="register-link">Register here!</a>
    </p>
 {{#if message}}
    <div style="text-align: center; color: {{#if error}}#FFD447{{else}}green{{/if}}; font-weight: bold; margin-bottom: 10px;">
      {{message}}
    </div>
    {{/if}}
  </div>
</div>
</div>
