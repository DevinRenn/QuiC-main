<style>

.login-box {
  background: rgba(255, 255, 255, 0.25);
  padding: 30px;
  width: 350px;
  margin: auto;
  margin-top: 80px;
  border-radius: 12px;
  backdrop-filter: blur(5px);
}
</style>
  <div class="login-box">

    <h2 style="text-align: center;">Login</h2>

    {{#if message}}
    <div style="text-align: center; color: {{#if error}}red{{else}}green{{/if}}; font-weight: bold; margin-bottom: 10px;">
      {{message}}
    </div>
    {{/if}}

    <form action="/login" method="POST" style="text-align: center;">
      <br>

      <label>Username: </label>
      <input type="text" name="username" required />
      <br><br>

      <label>Password: </label>
      <input type="password" name="password" required />
      <br><br>

      <button type="submit" style="background-color: rgb(0, 132, 255); color: white;">Go!</button>
    </form>

    <br>
    <p style="text-align: center;">
      Don't have an account? <a href="/register" class="register-link">Register here!</a>
    </p>

  </div>
</div>
