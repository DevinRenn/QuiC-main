<header>
  <nav class="navbar navbar-expand-sm border-bottom">
    <div class="container">
      <button
        class="navbar-toggler ms-auto"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbar-collapse"
        aria-controls="navbar"
        aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse position-relative" id="navbar-collapse">
        <ul class="navbar-nav me-auto">
          {{#if is_logout}}
            <!-- Only show Home on /logout -->
            <li class="nav-item">
              <a class="nav-link" href="/home">Home</a>
            </li>
          {{else}}
            <!-- Normal nav items -->
            <li class="nav-item">
              <a class="nav-link" href="/home">Home</a>
            </li>
          {{/if}}
        </ul>

        <a class="navbar-brand position-absolute top-50 start-50 translate-middle" href="/home">
          <img src="/img/logo3.jpg" alt="QuiC" height="55">
        </a>

        {{#unless is_logout}}
        <ul class="navbar-nav ms-auto">
          {{#if logged_in}}
            <li class="nav-item me-3">
              <a class="nav-link" href="/profile">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          {{else if is_home}}
            <li class="nav-item me-3">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
          {{/if}}
        </ul>
        {{/unless}}
      </div>
    </div>
  </nav>
</header>
